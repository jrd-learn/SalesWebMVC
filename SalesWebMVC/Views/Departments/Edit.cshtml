@model SalesWebMVC.Models.Department

@{
    ViewData["Title"] = "Departments";
}

<br />
<div class="text-center">
    <h2 class="display-4">@ViewData["Title"]</h2>
</div>
<br /><hr /><br /><br />

<div class="text-center">
    <h3>Edit</h3>
</div>
<div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <div class="col-md-6 border-top">
        <br />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th class="col-sm-2 fs-4 text-center">
                                <label asp-for="Id" class="control-label"></label>
                            </th>
                            <td>
                                <input disabled asp-for="Id" class="form-control text-center" />
                            </td>
                        </tr>
                        <tr>
                        <th class="col-sm-2 fs-4 text-center">
                            <label asp-for="Name" class="control-label"></label>
                        </th>
                        <td>
                            <input asp-for="Name" class="form-control text-center" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
                <div class="gap-2 d-md-flex justify-content-md-center form-group">
                    <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                    <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@Model.Id">Return</a>
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}