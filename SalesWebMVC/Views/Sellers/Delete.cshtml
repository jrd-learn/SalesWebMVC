@model SalesWebMVC.Models.Seller

@{
    ViewData["Title"] = "Sellers";
}

<br />
<div class="text-center">
    <h2 class="display-4">@ViewData["Title"]</h2>
</div>
<br /><hr /><br /><br />

<div class="text-center">
    <h3>Are you sure you want to delete this?</h3>
</div>
<div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <div class="col-md-6 border-top">
        <br />
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th class="col-sm-2 fs-4 text-center">
                                <label asp-for="Id" class="control-label"></label>
                            </th>
                            <td>
                                <input disabled asp-for="Id" class="form-control text-center" />
                            </td>
                        </tr>
                        <tr>
                        <th class="col-sm-2 fs-4 text-center">
                            <label asp-for="Name" class="control-label"></label>
                        </th>
                        <td>
                            <input disabled asp-for="Name" class="form-control text-center" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2 fs-4 text-center">
                            <label asp-for="Email" class="control-label"></label>
                        </th>
                        <td>
                            <input disabled asp-for="Email" class="form-control text-center" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2 fs-4 text-center">
                            <label asp-for="BirthDate" class="control-label"></label>
                        </th>
                        <td>
                            <input disabled asp-for="BirthDate" class="form-control text-center" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2 fs-4 text-center">
                            <label asp-for="BaseSalary" class="control-label"></label>
                        </th>
                        <td>
                            <input disabled asp-for="BaseSalary" class="form-control text-center" />
                            <span asp-validation-for="BaseSalary" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2 fs-4 text-center">
                            <label asp-for="Department" class="control-label"></label>
                        </th>
                        <td>
                            <input disabled asp-for="Department.Name" class="form-control text-center" />
                            <span asp-validation-for="Department.Name" class="text-danger"></span>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
                <div class="gap-2 d-md-flex justify-content-md-center form-group">
                    <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                    <a class="btn btn-outline-secondary btn-sm" asp-action="Index" asp-route-id="@Model.Id">Cancel</a>
                </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}